<section 
{%if config.useArtwork%} 
data-background-image="images/art/art{{key}}.png" 
{% else %}
data-background-image="{{"../images/"+config.themeImage | url }}" 
{%endif%}
data-background-opacity="0.5">
    <div class="w-full bg-gradient-to-br from-yellow-600/30 via-60% via-red-900/60 to-yellow-600/30 drop-shadow-lg rounded-md">
        <h3 class="drop-shadow-md">{{card.head}}</h3>

        <div id ="{{key + '-foc' + '_' + loop.index}}" scry="{{card.card.id}}" class="pb-1 drop-shadow-sm">
            <div class="r-stack mb-5 w-full text-center">
                <small data-fragment-index="1" class="fragment fade-out">???</small>
                <small data-fragment-index="1" class="fragment fade-up"></small>
            </div>
                  
            <hr class="mx-5">

            <div class="r-stack my-5">
                <img data-fragment-index="1" class="fragment fade-out w-1/3 shadow-xl opacity-100 rounded-3xl"data-src="images/card_back.jpg">

                <div data-fragment-index="1" class="fragment fade-down m-auto">
                    <div class="FlipButton w-1/3 cursor-pointer drop-shadow-sm hover:text-yellow-200 text-white text-md rounded-full z-10 font-bold px-2 absolute top-0 right-0" >
                        <h2 onclick="toggleImg('{{key + '-foc' + '_' + loop.index}}')">&#10227;</h2> 
                    </div>	

                    {%if card.card.new %}
                            <div 
                            class="newBadge drop-shadow-lg  animate-bounce absolute font-serif z-20 
                             p-1 w-2/3 bg-gray-800/0 text-white  rounded-md -top-15 -left-20
                            ">	
                            <span class="absolute z-10  animate-ping">&#10024;</span>
                            <span class="absolute z-20 ">&#10024;</span> 
                            </div>
                        {% endif %}	
                    <a class=" mx-auto grid place-items-center r-stack" target="_blank" href="#">
                    
                        <div class=" {% if card.card.foil%}foil-image  {% endif %} h-max w-1/2 aspect-[63/88] grid place-items-center rounded-3xl">
                        <img class=" preserve-3d transition card-image shadow-md opacity-100 rounded-3xl" data-src org="" trs="" onerror="populateFoilCard('{{key + '-foc' + '_' + loop.index}}')">
                        </div>
                    </a>
                </div>
            </div>
        </div>	

    </div>
</section>