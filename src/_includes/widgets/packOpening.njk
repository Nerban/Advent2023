    <!--ART SECTION-->
    {% set custom_id = pack.id + "-art"%}
        <section>
           <section 
           data-transition="zoom" 
           data-background-image="/images/{{pack.set}}/theme.jpg" 
           data-background-opacity="0.2" 
           id="{{custom_id}}" 
           scry="{{pack.art.id}}">  

