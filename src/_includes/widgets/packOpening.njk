            <a target="_blank" href="#">
                <small 
                class="title ">
                ???
                </small>
            </a>
        </div>
        
        <hr class="mx-5 border-emerald-400">
        <div class="w-full r-stack fragment custom cardBack">
            <div class="aspect-square p-12 w-3/5 mx-auto front hide">
                <div class="aspect-square">
                {% include "svg/"+pack.set+".njk" %}
                </div>
            </div>

            <div class=" back r-stack mx-auto
             {%if pack.art.rotate%}  w-1/3 aspect-[63/88] 
             {% else %} w-2/3 aspect-[88/63] 
             {%endif%}">
                <div class="w-full  rounded-2xl
                 {%if pack.art.rotate%}  aspect-[63/88] {% else %} aspect-[88/63] {%endif%} 
                 {%if pack.art.foil%}foil-image{%endif%}">
                </div>

                <img src="../images/{{pack.set}}/art/{{pack.art.image}}.png" class="rounded-2xl">
            </div>
        </div>
        </section>
    <!-- Multiple Cards-->
    {%for i in pack.multiple%}
