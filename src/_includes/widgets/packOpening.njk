			<div class="w-full grid grid-cols-4 mt-5 px-24 gap-4 grid-rows-2">

                {%for card in i.cards%}

                <div class="w-full aspect-card r-stack fragment custom cardBack"> 
                    <div class="front w-full aspect-card">
                        <img src="/images/card_back.jpg" class="rounded-xl hide">
                    </div>
                    <div class="back aspect-card w-full">
                        <div class="FlipButton 
                            bg-gray-900 cursor-pointer drop-shadow-sm 
                            hover:text-blue-200 text-white text-md rounded-lg 
                            rounded-tr-3xl z-10 font-bold px-3 bg-opacity-50 absolute -bottom-2 -left-2"
						    onclick="toggleImg('{{ key + '-com' + '_' + loop.index }}')" >&#10227;
                        </div>
                        {%if card.foil%}
                            <div class="w-full  rounded-xl aspect-card foil-image"></div>
                        {%endif%}

                         {%if card.new %}
                            <div 
                            class="newBadge drop-shadow-lg  animate-bounce absolute font-serif font-semibold  z-20 
